# Disable MultiViews (prevents Apache from guessing file names)
Options -MultiViews

# Always use Index.php as entry
DirectoryIndex Index.php

# Enable rewriting
RewriteEngine On

# Base path = your Solace project folder
RewriteBase /~dk9397/iste-341/Milestone2/

# Skip rewriting if request is a real file or folder
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Route everything else into Index.php
RewriteRule ^ Index.php [QSA,L]
